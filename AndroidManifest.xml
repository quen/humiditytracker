<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.leafdigital.humidity"
      android:versionCode="1"
      android:versionName="1.0">
    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".HumidityActivity"
                  android:label="@string/app_name" android:clearTaskOnLaunch="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    <activity android:name=".TakeReadingActivity" android:label="@string/takereading"></activity>

<activity android:name="ShowReadingActivity" android:label="@string/lastreading"></activity>
<activity android:label="@string/savereading" android:name="SaveReadingActivity"></activity>
<activity android:label="@string/showrecords" android:name="ShowRecordsActivity"></activity>
</application>
    <uses-sdk android:minSdkVersion="4" />

<supports-screens android:smallScreens="true" android:anyDensity="true" android:normalScreens="true" android:largeScreens="true">
</supports-screens>
</manifest> 